<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:id="@+id/item_immagine"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true">
        </ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/label_stato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/stato"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/label_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/quality"
                android:textSize="20sp" >
            </TextView>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/label_prezzo_acquisto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/prezzo_vendita"
                android:textSize="20sp" >
            </TextView>

            <TextView
                android:id="@+id/label_data_acquisto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/data_vendita"
                android:textSize="20sp" >
            </TextView>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

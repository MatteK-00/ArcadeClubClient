<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nuovo_immagine"
                android:layout_gravity="top|center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="upc"
                        android:id="@+id/nuovo_upc"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="nome"
                        android:id="@+id/nuovo_nome" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="anno"
                        android:id="@+id/nuovo_anno" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="console"
                        android:id="@+id/nuovo_console" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="prezzo acquisto"
                        android:id="@+id/nuovo_prezzo_acquisto"
                        android:numeric="decimal" />

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="data acquisto"
                        android:id="@+id/nuovo_data_acquisto" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner"
                        android:layout_gravity="center_horizontal"
                        android:entries="@array/spinner1_field" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/spinner2"
                        android:entries="@array/spinner2_field"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aggiungi Oggetto"
                        android:id="@+id/nuovo_button"
                        android:layout_alignParentStart="true" />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nuovo_note"
                android:layout_gravity="center_horizontal"
                android:hint="note" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>